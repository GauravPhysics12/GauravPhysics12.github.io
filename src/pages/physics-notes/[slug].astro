---
import { Container } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import { categories } from '../../config/notes.js';

export async function getStaticPaths() {
  return categories.map(category => {
    return {
      params: { slug: category.slug },
      props: { category },
    };
  });
}

const { category } = Astro.props;
---

<Layout>
  <section class="hero">
    <Container>
      <h1>{category.name}</h1>
      <p>{category.description}</p>
      <a href="/physics-notes" class="back-link">&larr; Back to All Notes</a>
    </Container>
  </section>

  <Container>
    <section class="notes-list">
      {category.notes.map(note => (
        <div class="note-card">
          <div class="note-info">
            <h2>{note.title}</h2>
            {note.comment && <p class="note-comment">{note.comment}</p>}
          </div>
          <a href={note.pdfUrl} class="button" target="_blank" rel="noopener noreferrer">
            View PDF
          </a>
        </div>
      ))}
    </section>
  </Container>
</Layout>

<style>
  .hero { text-align: center; padding: 4rem 1rem; background-color: var(--theme-bg-offset); }
  .back-link {
    display: inline-block;
    margin-top: 2rem;
    color: var(--theme-text-offset);
    text-decoration: none;
    border: 1px solid var(--theme-border);
    padding: 0.5rem 1rem;
    border-radius: 5px;
    transition: background-color 0.2s ease, border-color 0.2s ease;
  }
  .back-link:hover {
    background-color: var(--theme-surface-1);
    border-color: var(--theme-accent);
  }
  .notes-list { margin: 3rem auto; max-width: 800px; }
  .note-card {
    background-color: var(--theme-surface-1);
    padding: 1.5rem 2rem;
    margin-bottom: 2rem;
    border-radius: 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1.5rem;
  }
  .note-info h2 { margin: 0; font-size: 1.5rem; color: var(--theme-on-surface-1); }
  
  /* Style for your new comment text */
  .note-comment {
    font-size: 0.9rem;
    font-style: italic;
    color: var(--theme-text-offset);
    margin: 0.5rem 0 0 0;
  }

  .button {
    display: inline-block;
    background-color: var(--theme-accent);
    color: var(--theme-on-primary);
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: background-color 0.2s ease;
    white-space: nowrap;
  }
  .button:hover { background-color: var(--theme-accent-hover); }
</style>