---
import { Container } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import { categories } from '../../config/notes.js';

export async function getStaticPaths() {
  return categories.map(category => {
    return {
      params: { slug: category.slug },
      props: { category },
    };
  });
}

const { category } = Astro.props;
---

<Layout class="dark">
  <section class="hero">
    <Container>
      <h1>{category.name}</h1>
      <p>{category.description}</p>
      <a href="/physics-notes" class="back-link">&larr; Back to All Notes</a>
    </Container>
  </section>

  <Container>
    <section class="notes-list">
      {category.notes.map(note => (
        <div class="note-card">
          <h2>{note.title}</h2>
          <a href={note.pdfUrl} class="button" target="_blank" rel="noopener noreferrer">
            View PDF
          </a>
        </div>
      ))}
    </section>
  </Container>
</Layout>

<style>
  .hero { text-align: center; padding: 4rem 1rem; background-color: var(--theme-dark-bg, #111); color: var(--theme-light-color, #fff); }
  .back-link {
    display: inline-block;
    margin-top: 2rem;
    color: #ccc;
    text-decoration: none;
    border: 1px solid #555;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    transition: background-color 0.2s ease, border-color 0.2s ease;
  }
  .back-link:hover {
    background-color: #333;
    border-color: #777;
  }
  .notes-list { margin: 3rem auto; max-width: 800px; }
  .note-card {
    background-color: #222;
    border-left: 4px solid var(--theme-accent, #ff6b6b);
    padding: 1.5rem 2rem;
    margin-bottom: 2rem;
    border-radius: 0 8px 8px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .note-card h2 { margin: 0; font-size: 1.5rem; color: #eee; }
  .button {
    display: inline-block;
    background-color: var(--theme-accent, #ff6b6b);
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: background-color 0.2s ease;
    white-space: nowrap;
  }
  .button:hover { background-color: var(--theme-accent-hover, #ff4f4f); color: white; }
</style>