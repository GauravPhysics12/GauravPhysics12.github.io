---
import { Container, SEO } from '@components/odyssey-theme';
import type { Props as SEOProps } from '@components/odyssey-theme/SEO.astro';
import PageLayout from './Page.astro';
const { frontmatter } = Astro.props;

const seo: SEOProps = {
  title: frontmatter.title,
  description: frontmatter.description,
  image: frontmatter.featuredImage,
};
---

<PageLayout {seo}>
  <Container>
    <article class="post">
      <header class="post-header">
        <h1>{frontmatter.title}</h1>
      </header>
      <div class="prose">
        <slot />
      </div>
    </article>
  </Container>
</PageLayout>

<style>
  .post { padding-bottom: 3rem; }
  .post-header { text-align: center; margin: 3rem 0; }
  .post-header h1 { font-size: 3.5rem; margin-bottom: 1rem; }
  .post-header time { color: var(--theme-text-offset); }
  .prose { max-width: 800px; margin: auto; }
  .prose :global(p), .prose :global(ul), .prose :global(ol) { line-height: 1.8; }
  .prose :global(a.button), .prose :global(a.button-small) { /* ...button styles... */ }

  /* âœ… THIS IS THE FINAL, CORRECTED STYLE */
  .prose :global(blockquote.clean-quote) {
    border-left: none !important; /* Forcefully removes the left border */
    padding: 0;
    margin: 2rem 0;
  }
</style>